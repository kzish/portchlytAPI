@{ Layout = "_Layout";}




<style>
    #username-error{color:red;}
    #password-error{color:red;}
</style>


<div class="box flex">
    <div style="width:50%!important;" class="login_bosh_shadow">
        <div class="row">
            <div class="col-md-5">
                <div id="bgleft">
                </div>
            </div>
            <div class="col-md-7" style="padding:10px;">
                <center>
                    <h4>Porchlyt Admin Web Console</h4>
                    <h5>Admin Login</h5>
                </center>
                <br />
                <form id="f1" action="/Auth/login" method="post" style="padding:30px">
                    <div class="form-group">
                        <label>username</label>
                        <input type="text" class="form-control" id="username" name="email" required />
                    </div>

                    <div class="form-group">
                        <label>password</label>
                        <input type="password" class="form-control" id="password" name="password" required />
                    </div>
                    <br />
                    <br />
                    <br />
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">Sign in</button>
                    </div>
                    <small style="color:red">@ViewBag.msg</small>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $("#f1").validate();
</script>